{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["DOM", "ESNext"],
		"moduleResolution": "Node",
		"strictNullChecks": true,
		"declaration": true,
		"declarationDir": "dist/types",
		"emitDeclarationOnly": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"outDir": "dist"
	},
	"include": ["core"],
	"exclude": ["node_modules", "dist"]
}
